@{
    ViewData["Title"] = "Depth Chart Manager";
}

<div class="text-center">
    <h1 class="display-4">Depth Chart Manager</h1>
    <h4>Ourlads View</h4>
    <h4>To make changes to a position group, click the corresponding edit button.</h4>
    <table class="table table-striped">
        <caption>Depth Chart Overview</caption>
        <thead>
            <tr>
                <th scope="col">Pos</th>
                <th scope="col">#</th>
                <th scope="col">Player 1</th>
                <th scope="col">#</th>
                <th scope="col">Player 2</th>
                <th scope="col">#</th>
                <th scope="col">Player 3</th>
                <th scope="col">#</th>
                <th scope="col">Player 4</th>
                <th scope="col">#</th>
                <th scope="col">Player 5</th>
                <th scope="col">Actions</th>
            </tr>


        </thead>
        <tbody>
            <tr>
                <td>QB</td>
            @{
                if (Model != null)
                {
                    @foreach (var Data in Model)
                    {
                        <td>@Data.JerseyNumber.ToString()</td>
                        <td>@(Data.FirstName +" " + Data.LastName)</td>
                    }
                }
                <td><a style="color:#Fe5c00;" href="#"><i class="fas fa-pen"></i></a></td>
            }
            </tr>
        </tbody>
    </table>
</div>
